<Window x:Class="POP_sf_41_2016_GUI.UI.StavkaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_sf_41_2016_GUI.UI"
        mc:Ignorable="d"
        Title="StavkaWindow" Height="450" Width="379">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <DataGrid Name="dataGridNamestaj" SelectionMode="Single" CanUserResizeColumns="False" CanUserResizeRows="False" CanUserDeleteRows="False" CanUserAddRows="False" CanUserSortColumns="True" HorizontalAlignment="Center" Height="207" Margin="10,30,10,10" VerticalAlignment="Center" Width="351" SelectedIndex="0" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Naziv}" Header="Naziv"  Width="*"/>
                <DataGridTextColumn Binding="{Binding Path=Sifra}" Header="Sifra"  Width="*"/>
                <DataGridTextColumn Binding="{Binding Path=JedinicnaCena}" Header="Cena"  Width="*"/>
                <DataGridTextColumn Binding="{Binding Path=KolicinaUMagacinu}" Header="Kolicina"  Width="*"/>
                <DataGridTextColumn Binding="{Binding Path=TipNamestaja}" Header="Tip namestaja"  Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Name="btnOdustani" HorizontalAlignment="Left" Margin="286,33,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Click="Odustani_click">
            <TextBlock TextWrapping="Wrap" Text="TextBlock"/>
        </Button>
        <Button Name="btnPotvrdi" Content="Potvrdi" HorizontalAlignment="Left" Margin="181,33,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Click="Potvrdi_click"/>
        <Label Content="Kolicina" HorizontalAlignment="Left" Margin="29,25,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox Name="tbKolicina" Text="{Binding kolicina}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="131" Margin="101,25,0,0" Grid.Row="1"/>
    </Grid>
</Window>
